# ============================================
# Tutas Ai - Environment Variables
# ============================================

# Domain Configuration
DOMAIN=localhost

# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tutas_ai
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/tutas_ai

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# ============================================
# MinIO S3 Storage Configuration
# ============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_BUCKET_PHOTOS=tutas-photos
MINIO_BUCKET_REPORTS=tutas-reports
MINIO_BUCKET_MODELS=tutas-models
MINIO_USE_SSL=false

# ============================================
# Backend API Configuration
# ============================================
BACKEND_PORT=8000
ENVIRONMENT=development
LOG_LEVEL=INFO

# ============================================
# Traefik Configuration
# ============================================
TRAEFIK_HTTP_PORT=80
TRAEFIK_HTTPS_PORT=443
TRAEFIK_DASHBOARD_PORT=8080
ACME_EMAIL=admin@example.com

# ============================================
# Security & Authentication
# ============================================
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_SECRET_KEY=change-this-to-a-random-jwt-secret-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# AI Engine Configuration
# ============================================
AI_ENGINE_URL=http://ai-engine:8001
AI_MODEL_PATH=/app/models

# ============================================
# Mobile App Sync Configuration
# ============================================
SYNC_BATCH_SIZE=100
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY_SECONDS=5
